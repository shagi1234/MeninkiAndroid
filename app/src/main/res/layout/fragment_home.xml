<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".fragment.FragmentHome">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/container_profile_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@color/bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/banner_1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40dp"
                android:scaleType="centerCrop"
                android:src="@color/neutral_dark"
                android:visibility="visible"
                app:riv_corner_radius="10dp" />

            <FrameLayout
                android:id="@+id/header_popular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/inter_bold"
                    android:text="Популярное"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_popular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="40dp"
                android:orientation="vertical"
                android:visibility="visible">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/banner_2"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@color/neutral_dark"
                    app:riv_corner_radius="10dp" />

                <TextView
                    android:id="@+id/desc_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/inter_medium"
                    android:text="Description label"
                    android:textColor="@color/contrast" />

                <TextView
                    android:id="@+id/desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/inter_medium"
                    android:text="Description"
                    android:textColor="@color/neutral_dark" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/header_markets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/inter_bold"
                    android:text="Магазины"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_markets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:nestedScrollingEnabled="false" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/big_image_3"
                android:layout_width="match_parent"
                android:layout_height="375dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="40dp"
                android:scaleType="centerCrop"
                android:src="@color/neutral_dark"
                android:visibility="gone"
                app:riv_corner_radius="10dp" />

            <FrameLayout
                android:id="@+id/header_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/inter_bold"
                    android:text="Новинки"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_new_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/fab"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp">

        <FrameLayout
            android:id="@+id/click_fab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_corner_20" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/fab" />
    </FrameLayout>

</FrameLayout>