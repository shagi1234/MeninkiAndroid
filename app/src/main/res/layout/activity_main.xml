<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        tools:context=".activity.ActivityMain">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".fragment.FragmentFlow">

            <FrameLayout
                android:id="@+id/content_with_nav"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/nav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_bottom_nav"
                android:layout_gravity="bottom|center"
                android:layout_marginHorizontal="60dp"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="10dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/nav_main"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@color/contrast"
                    android:padding="12sp"
                    android:src="@drawable/main_active"
                    app:riv_oval="true" />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/nav_category"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginHorizontal="14dp"
                    android:background="@color/on_bg_ls"
                    android:padding="12sp"
                    android:src="@drawable/category_inactive"
                    app:riv_oval="true" />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/nav_card"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@color/on_bg_ls"
                    android:padding="12sp"
                    android:src="@drawable/card_inactive"
                    app:riv_oval="true" />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/nav_profile"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="14dp"
                    android:background="@color/on_bg_ls"
                    android:padding="4dp"
                    android:src="@drawable/neutral_dark_oval"
                    app:riv_oval="true" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/fragment_container_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>