<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FragmentStory">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="224dp"
            android:layout_gravity="end"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/ripple"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:paddingHorizontal="6dp"
                android:src="@drawable/ic_like" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/inter_regular"
                android:text="12K"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/ripple"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:paddingHorizontal="6dp"
                android:src="@drawable/ic_comment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/inter_regular"
                android:text="12K"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/ripple"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:paddingHorizontal="6dp"
                android:src="@drawable/ic_share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/inter_regular"
                android:text="12K"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="11dp"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/inter_regular"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="twodiesdeveloper"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/button_subscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/inter_regular"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="4dp"
                android:text="Подписаться"
                android:textColor="@color/white"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/inter_regular"
                android:gravity="center_vertical"
                android:maxLines="3"
                android:text="Купила очки как у моего братюни! Совсем недорого, горбатая бабка продавала на ВДНХ. Качество хорошее, цвет точно такой же"
                android:textColor="@color/white"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/black"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/profile_box"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginVertical="14sp"
                android:layout_marginStart="10dp"
                android:padding="5dp"
                android:src="@color/alert"
                app:riv_corner_radius="4dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_regular"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Очки как у Николаса Кейджа размер для толковых"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/options"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginVertical="14sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ripple"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:src="@drawable/ic_options"
                android:tint="@color/white"
                app:riv_corner_radius="4dp" />
        </LinearLayout>


    </LinearLayout>


    <FrameLayout
        android:id="@+id/back_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top|start"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/ripple"
        android:clickable="true"
        android:focusable="true"
        android:paddingHorizontal="7dp"
        android:paddingVertical="4dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_back" />
    </FrameLayout>

</FrameLayout>