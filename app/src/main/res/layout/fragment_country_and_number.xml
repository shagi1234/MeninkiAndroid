<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Давай знакомиться"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Выбери язык"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/select_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight="0.3"
                android:drawableEnd="@drawable/ic_chevron__1_"
                android:drawableTint="@color/dark"
                android:fontFamily="@font/roboto_flex"
                android:gravity="center_vertical"
                android:paddingVertical="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="18dp"
                android:text="+993"
                android:textColor="@color/dark" />

            <EditText
                android:id="@+id/edt_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1.7"
                android:drawableTint="@color/dark"
                android:fontFamily="@font/roboto_flex"
                android:gravity="center_vertical"
                android:inputType="phone"
                android:maxLength="8"
                android:paddingVertical="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="18dp"
                android:text="65 14 14 14"
                android:textColor="@color/black" />


        </LinearLayout>


        <TextView
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:text="Приступить"
            android:textColor="@color/background" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_flex"
            android:gravity="center"
            android:text="Зарегистрироваться позже"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_chevron__1_"
            app:tint="@color/dark" />

    </LinearLayout>


</RelativeLayout>