<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/main_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Давай знакомиться"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Выбери страна"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/select_code"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="6dp"
                android:drawableEnd="@drawable/ic_chevron__1_"
                android:drawableTint="@color/dark"
                android:fontFamily="@font/roboto_flex"
                android:gravity="center_vertical"
                android:paddingVertical="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="+993"
                android:textColor="@color/dark" />

            <EditText
                android:id="@+id/edt_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:drawableTint="@color/dark"
                android:fontFamily="@font/roboto_flex"
                android:gravity="center_vertical"
                android:inputType="phone"
                android:paddingVertical="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="20sp"
                android:textColor="@color/black"
                tools:text="655555555555555" />


        </LinearLayout>


        <TextView
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:text="Приступить"
            android:textColor="@color/background" />


    </LinearLayout>

    <TextView
        android:id="@+id/sign_in_google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom"
        android:layout_marginHorizontal="20dp"
        android:background="@color/white"
        android:drawableStart="@drawable/company_logos"
        android:drawablePadding="8dp"
        android:fontFamily="@font/roboto_flex"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:text="Sign in with Google"
        android:textColor="@color/text_3341"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_flex"
            android:gravity="center"
            android:text="Зарегистрироваться позже"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_chevron__1_"
            app:tint="@color/dark" />

    </LinearLayout>

</RelativeLayout>