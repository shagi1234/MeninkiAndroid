<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:clickable="true"
    android:focusable="true"
    tools:context=".fragment.FragmentAddProduct">

    <LinearLayout
        android:id="@+id/lay_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:layout_weight="1"
            android:fontFamily="@font/inter_bold"
            android:gravity="center_vertical"
            android:text="Новый товар"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/back_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="9dp"
            android:background="@drawable/ripple">

            <ImageView
                android:id="@+id/ic_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_clear"
                android:tint="@color/black"
                tools:ignore="UseAppTint" />

        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg"
        app:layout_constraintTop_toBottomOf="@+id/lay_header" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/line">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/inter_medium"
                android:text="Название"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_transparent"
                android:fontFamily="@font/inter_bold"
                android:hint="Заголовок (необязательно)"
                android:padding="14dp"
                android:textColor="@color/contrast"
                android:textColorHint="@color/neutral_dark" />

            <TextView
                android:id="@+id/choose_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_transparent"
                android:fontFamily="@font/inter_bold"
                android:hint="Choose category"
                android:padding="14dp"
                android:textColor="@color/contrast"
                android:textColorHint="@color/neutral_dark" />

            <TextView
                android:id="@+id/choose_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_transparent"
                android:fontFamily="@font/inter_bold"
                android:hint="Choose shop"
                android:padding="14dp"
                android:textColor="@color/contrast"
                android:textColorHint="@color/neutral_dark"
                android:visibility="gone" />

            <TextView
                android:id="@+id/h_desc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/inter_medium"
                android:gravity="start"
                android:maxLines="1"
                android:text="Описание"
                android:textColor="@color/black" />


            <EditText
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_transparent"
                android:fontFamily="@font/inter_bold"
                android:gravity="start"
                android:hint="Заголовок (необязательно)"
                android:padding="14dp"
                android:textColor="@color/contrast"
                android:textColorHint="@color/neutral_dark" />

            <LinearLayout
                android:id="@+id/lay_price_if1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/price_header"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Ценообразование"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/price_h"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="start"
                    android:maxLines="1"
                    android:text="Цена"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/color_transparent"
                    android:fontFamily="@font/inter_bold"
                    android:hint="Обязательное поле"
                    android:inputType="numberDecimal"
                    android:padding="14dp"
                    android:textColor="@color/contrast"
                    android:textColorHint="@color/neutral_dark" />

                <TextView
                    android:id="@+id/sale_price_h"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="start"
                    android:maxLines="1"
                    android:text="Цена до скидки"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/old_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/color_transparent"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="start"
                    android:hint="Необязательно"
                    android:inputType="numberDecimal"
                    android:padding="14dp"
                    android:textColor="@color/contrast"
                    android:textColorHint="@color/neutral_dark" />

                <TextView
                    android:id="@+id/h_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="start"
                    android:maxLines="1"
                    android:text="Count"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/color_transparent"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="start"
                    android:inputType="number"
                    android:padding="14dp"
                    android:text="1"
                    android:textColor="@color/contrast"
                    android:textColorHint="@color/neutral_dark" />
            </LinearLayout>


            <TextView
                android:id="@+id/media_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/inter_medium"
                android:gravity="center"
                android:maxLines="1"
                android:text="Медиа"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_media"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/header_product_characteristic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Характеристики товара"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_product_characteristic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="14dp"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="start"
                    android:text="Здесь вы сможете добавить характеристики к вашему товару и создать вариации к каждой характеристике. Дальше прочая справка."
                    android:textColor="@color/neutral_dark"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/lay_warriant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/wariants"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:paddingVertical="14dp"
                        android:text="0 вариантов"
                        android:textColor="@color/contrast"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/redactor_character"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:drawableEnd="@drawable/ic_chevron__1_"
                        android:drawableTint="@color/accent"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="start"
                        android:padding="14dp"
                        android:text="Редактировать характеристики"
                        android:textColor="@color/accent"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lay_price_if_many"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/header_price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/inter_medium"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="Ценообразование"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/lay_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="14dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/prices"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="1dp"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="center"
                            android:paddingVertical="14dp"
                            android:text="0 TMT"
                            android:textColor="@color/contrast"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/redactor_price"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="1dp"
                            android:drawableEnd="@drawable/ic_chevron__1_"
                            android:drawableTint="@color/accent"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="start"
                            android:padding="14dp"
                            android:text="Редактировать стоимость"
                            android:textColor="@color/accent"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@color/color_transparent" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lay_btn_basket"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/txt_go_basket"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/accent"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            android:paddingHorizontal="17dp"
            android:paddingVertical="10dp"
            android:text="Оценить и отправить"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <FrameLayout
            android:id="@+id/go_basket"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/ripple_white"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/gray_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3"
        android:background="@color/black"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
