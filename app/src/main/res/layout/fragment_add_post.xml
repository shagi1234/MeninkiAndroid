<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:clickable="true"
    android:id="@+id/root"
    android:focusable="true"
    tools:context=".fragment.FragmentAddPost">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lay_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="32dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_flex"
                    android:gravity="center_vertical"
                    android:text="Новый пост"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/ic_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="9dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_clear"
                    app:tint="@color/black" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_media"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/roboto_flex"
                android:hint="Заголовок (необязательно)"
                android:padding="14dp"
                android:textColor="@color/dark"
                android:textColorHint="@color/caption"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/roboto_flex"
                android:gravity="top"
                android:hint="Описание (необязательно)"
                android:padding="14dp"
                android:textColor="@color/dark"
                android:textColorHint="@color/caption"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="20dp"
        android:background="@color/accent"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:text="Опубликовать"
        android:textColor="@color/background" />


</FrameLayout>