<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_post">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/player_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_post"
                android:keepScreenOn="true"
                app:controller_layout_id="@layout/video_custom_conroller"
                app:hide_on_touch="false"
                app:player_layout_id="@layout/player_layout"
                app:resize_mode="fit"
                app:show_buffering="always"
                app:show_timeout="0"
                app:use_controller="true" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_transparent"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitCenter"
                android:visibility="visible" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/image_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_post"
                android:visibility="gone" />

            <FrameLayout
                android:id="@+id/bottom_gradient"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="1dp"
                android:background="@drawable/gradient_black_to_transparent"
                android:rotation="180" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/click_user"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/friend_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@color/neutral_dark"
                            android:visibility="visible"
                            app:riv_oval="true" />

                        <TextView
                            android:id="@+id/friend_text_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/circle_background_primary"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="center"
                            tools:text="SD"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:visibility="gone" />

                    </FrameLayout>


                    <ImageView
                        android:id="@+id/like"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="14dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/ripple"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="5dp"
                        android:paddingHorizontal="6dp"
                        android:src="@drawable/ic_like" />

                    <TextView
                        android:id="@+id/like_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/inter_regular"
                        tools:text="12K"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/comment"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="14dp"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/ripple"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="5dp"
                        android:paddingHorizontal="6dp"
                        android:src="@drawable/ic_comment" />

                    <TextView
                        android:id="@+id/comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/inter_regular"
                        tools:text="12K"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/share"
                        android:layout_width="40dp"
                        android:layout_height="45dp"
                        android:layout_marginHorizontal="14dp"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/ripple"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="5dp"
                        android:paddingHorizontal="6dp"
                        android:src="@drawable/ic_share" />

                    <TextView
                        android:id="@+id/share_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/inter_regular"
                        tools:text="12K"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:visibility="gone" />

                </LinearLayout>

                <me.relex.circleindicator.CircleIndicator3
                    android:id="@+id/indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp"
                    android:gravity="center"
                    android:visibility="gone"
                    app:ci_drawable="@drawable/neutral_dark_oval"
                    app:ci_drawable_unselected="@drawable/black_oval"
                    app:ci_gravity="center"
                    app:ci_height="5dp"
                    app:ci_margin="5dp"
                    app:ci_orientation="horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="11dp"
                    android:background="@color/color_transparent"
                    android:orientation="horizontal"
                    android:paddingHorizontal="4dp">

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        tools:text="twodiesdeveloper"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/button_subscribe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:padding="4dp"
                        android:text="@string/subscribe"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:visibility="gone" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="11dp"
                    android:background="@color/color_transparent"
                    android:orientation="horizontal"
                    android:paddingHorizontal="4dp">

                    <TextView
                        android:id="@+id/desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="10dp"
                        android:background="@color/color_transparent"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_vertical"
                        android:maxLines="3"
                        tools:text="@string/sample_desc"
                        android:textColor="@color/white"
                        android:textSize="14sp" />


                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/top_gradient"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/gradient_black_to_transparent" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/black"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp">

            <LinearLayout
                android:id="@+id/click_store"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/img_prod"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginVertical="14sp"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    android:src="@color/low_contrast"
                    app:riv_corner_radius="4dp" />

                <TextView
                    android:id="@+id/title_prod"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    tools:text="@string/sample_title" />
            </LinearLayout>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/options"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="14sp"
                android:background="@drawable/ripple"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:src="@drawable/ic_options"
                android:tint="@color/white"
                app:riv_corner_radius="4dp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>