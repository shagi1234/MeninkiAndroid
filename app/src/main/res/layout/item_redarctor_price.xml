<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="14dp"
    android:layout_marginVertical="5dp"
    android:background="@color/white"
    android:padding="14dp">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/options_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp" />

        </ScrollView>

        <EditText
            android:id="@+id/edt_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/bg"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:hint="@string/enter_price_here"
            android:inputType="numberDecimal"
            android:paddingVertical="14dp"
            android:textColor="@color/contrast"
            android:textColorHint="@color/neutral_dark"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edt_old_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/bg"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:hint="@string/enter_discount_price_here"
            android:inputType="numberDecimal"
            android:paddingVertical="14dp"
            android:textColor="@color/contrast"
            android:textColorHint="@color/neutral_dark"
            android:textSize="14sp" />

    </LinearLayout>
</FrameLayout>